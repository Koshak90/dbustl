// STL set & multiset support

#ifndef DBUSTL_TYPES_SET
#define DBUSTL_TYPES_SET

#include <set>
#include <dbustl-1/types/StdTools>

namespace dbustl {
namespace types {

/* set support */
template<typename T, typename X, typename Y>
struct Signature<std::set<T, X, Y> > : public ArraySignature<T> {};

template<typename T, typename X, typename Y>
struct Serializer<std::set<T, X, Y> >: public ArraySerializer<std::set<T, X, Y> > {};

template<typename Container>
struct SetDeserializer {
    static dbus_bool_t run(DBusMessageIter* it, Container* arg);
};
template<typename Container>
dbus_bool_t SetDeserializer<Container>::run(DBusMessageIter* it, Container* arg)
{
    DBusMessageIter subIterator;
    if(dbus_message_iter_get_arg_type(it) != DBUS_TYPE_ARRAY) {
        return FALSE;
    }
    
    dbus_message_iter_recurse(it, &subIterator);
    while (dbus_message_iter_get_arg_type(&subIterator) != DBUS_TYPE_INVALID) {
        typename Container::value_type element;
        if(Deserializer<typename Container::value_type>::run(&subIterator, &element) == FALSE) {
            return FALSE;
        }
        arg->insert(element);
        dbus_message_iter_next(&subIterator);
    }
    
    return TRUE;
}
template<typename T, typename X, typename Y>
struct Deserializer<std::set<T, X, Y> >: public SetDeserializer<std::set<T, X, Y> > {};

/* multiset support */
template<typename T, typename X, typename Y>
struct Signature<std::multiset<T, X, Y> > : public ArraySignature<T> {};

template<typename T, typename X, typename Y>
struct Serializer<std::multiset<T, X, Y> >: public ArraySerializer<std::multiset<T, X, Y> > {};

template<typename T, typename X, typename Y>
struct Deserializer<std::multiset<T, X, Y> >: public SetDeserializer<std::multiset<T, X, Y> > {};

}
}

#endif /* DBUSTL_TYPES_SET */
